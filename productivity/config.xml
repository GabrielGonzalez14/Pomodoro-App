<?xml version='1.0' encoding='utf-8'?>
<widget id="app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pomodoro App</name>
    <description>An application created based on HTML, CSS, and JS that implements the Pomodoro method to focus on doing tasks -Team GGON~Z</description>
    <author email="935824@gmail.com" href="https://cordova.apache.org">
        Team GGON~Z
    </author>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
        <allow-intent href="tel:*" />
        <allow-intent href="sms:*" />
        <allow-intent href="mailto:*" />
        <allow-intent href="geo:*" />

        <platform name ="android">
        <allow-intent href="market:*" />
        <icon src= "assets/mipmap-mdpi/icon.png" density ="mdpi"/>
        <icon src= "assets/mipmap-hdpi/icon.png" density ="hdpi"/>
        <icon src= "assets/mipmap-xhdpi/icon.png" density ="xhdpi"/>
        <icon src= "assets/mipmap-xxhdpi/icon.png" density ="xxhdpi"/>
        <icon src= "assets/mipmap-xxxhdpi/icon.png" density ="xxxhdpi"/>
        </platform>

        <platform name ="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*"/>
        </platform>

</widget>
